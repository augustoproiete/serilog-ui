{
  "version": "3.0.0",
  "name": "serilog-ui",
  "private": true,
  "type": "module",
  "scripts": {
    "old:build": "parcel build assets/index.html --dist-dir wwwroot/dist --public-url ./",
    "old:lint": "npx eslint -f html assets/ > eslint-results.html",
    "old:start": "parcel assets/index.html --dist-dir wwwroot/dev --https --host 127.0.0.1",
    "old:test": "npx jest --watch",
    "old:test:local": "jest",
    "old:test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "tmp": "mkcert -install",
    "build": "tsc && vite build",
    "lint": "eslint src",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest",
    "test:coverage": "vitest run --reporter=default --reporter=vitest-sonar-reporter --coverage",
    "test:ui": "vitest --ui --reporter=default",
    "make-me-pretty": "prettier --write .\\assets\\"
  },
  "dependencies": {
    "@mantine/code-highlight": "^7.4.1",
    "@mantine/core": "^7.4.1",
    "@mantine/dates": "^7.4.1",
    "@mantine/form": "^7.4.1",
    "@mantine/hooks": "^7.4.1",
    "@tabler/icons-react": "^2.46.0",
    "@tanstack/react-query": "^5.17.10",
    "date-fns": "^3.3.0",
    "immer": "^10.0.2",
    "jose": "^5.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "use-immer": "^0.9.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@tanstack/react-query-devtools": "^5.17.10",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-istanbul": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.1.2",
    "eslint-plugin-vitest": "^0.3.9",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "jsdom": "^24.0.0",
    "msw": "^2.0.14",
    "prettier": "^3.2.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-mkcert": "^1.17.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.2.0",
    "vitest-sonar-reporter": "^1.0.0"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "msw": {
    "workerDirectory": "src"
  }
}
